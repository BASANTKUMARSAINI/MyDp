<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="50dp"
    android:paddingStart="20dp"
    android:background="@color/other_background"
    android:paddingEnd="20dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_cross"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/cross"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/img_check_mail"
        android:layout_width="wrap_content"
        android:layout_below="@id/img_cross"
        android:layout_marginTop="50dp"
        android:src="@drawable/awesome_icon"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_check_mail"
        android:text="@string/check_your_email"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_check_mail"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_check_mail_line"
        android:text="@string/verification_email"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_check_mail"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_dark"
        android:layout_width="match_parent"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_go_to_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_check_mail_line"
        android:layout_marginTop="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/button_background"
        android:text="@string/go_to_login"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>